/* pages/reservation/reservation.wxss */

.reservation {
  min-height: 100vh;
  box-sizing: border-box;
  padding: 20rpx 0;
}

.table {
  border-top: 1px solid #e8e8e8;
  border-bottom: 1px solid #e8e8e8;
}

.table-header {
  display: flex;
  border-bottom: 1px solid #e8e8e8;
}

.table-header-title {
  flex: 1;
  text-align: center;
  font-size: 16px;
  padding: 8px 0;
  background: #fafafa;
  border-right: 1px solid #e8e8e8;
}

.table-header-title:last-child {
  border-right: none;
}

.table-body {
  font-size: 12px;
  color: rgba(0, 0, 0, 0.65);
}

.section {
  display: flex;
  border-bottom: 1px solid #e8e8e8;
}

.section:last-child {
  border: none;
}

.section-item {
  flex: 1;
  text-align: center;
  padding: 8px 0;
  border-right: 1px solid #e8e8e8;
}

.section-item:last-child {
  border-right: none;
  color: #1890ff;
}